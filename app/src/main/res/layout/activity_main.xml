<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewStyle"
            android:text="Read the following question carefully and give your answers appropriately."
            android:textAlignment="center"
            android:textStyle="italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:id="@+id/name"
            android:textSize="18sp"
            android:hint="Enter Your Name"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStyle"
                android:text="1. The relationship between °F and °C temperatures in terms of °C is?" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup1">

                <RadioButton
                    android:id="@+id/q1_first_option"
                    style="@style/RadioButtonStyle"
                    android:onClick="answerOne"
                    android:text="°F = 9/5°C + 32" />

                <RadioButton
                    android:id="@+id/q1_second_option"
                    style="@style/RadioButtonStyle"
                    android:onClick="answerOne"
                    android:text="°C = 5/9(°F-32)" />

                <RadioButton
                    android:id="@+id/q1_third_option"
                    style="@style/RadioButtonStyle"
                    android:onClick="answerOne"
                    android:text="°F = 9/5°C – 32" />

                <RadioButton
                    android:id="@+id/q1_fourth_option"
                    style="@style/RadioButtonStyle"
                    android:onClick="answerOne"
                    android:text="°C = 5/9(°F+32)" />
            </RadioGroup>

            <TextView
                style="@style/TextViewStyle"
                android:text="2. The ratio of a km to mile is?" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup2">

                <RadioButton
                    android:id="@+id/q2_first_option"
                    style="@style/RadioButtonStyle"
                    android:onClick="answerTwo"
                    android:text="1:1.0" />

                <RadioButton
                    android:id="@+id/q2_second_option"
                    style="@style/RadioButtonStyle"
                    android:onClick="answerTwo"
                    android:text="1:1.1" />

                <RadioButton
                    android:id="@+id/q2_third_option"
                    style="@style/RadioButtonStyle"
                    android:onClick="answerTwo"
                    android:text="1:1.4" />

                <RadioButton
                    android:id="@+id/q2_fourth_option"
                    style="@style/RadioButtonStyle"
                    android:onClick="answerTwo"
                    android:text="1:1.6" />
            </RadioGroup>

            <TextView
                style="@style/TextViewStyle"
                android:text="3. The minimum distance between the sun and the earth occurs on:" />

            <TextView
                style="@style/TextViewStyle"
                android:text="Answer should be in the format: February 01"
                android:textAlignment="center"
                android:textStyle="italic" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="February 01"
                android:inputType="textCapWords"
                android:id="@+id/q3Answer"/>

            <TextView
                style="@style/TextViewStyle"
                android:text="4. One Astronomical unit is the average distance between:" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup4">

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerFour"
                    android:text="Earth and Sun"
                    android:id="@+id/q4_first_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerFour"
                    android:text="Jupiter and Sun"
                    android:id="@+id/q4_second_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerFour"
                    android:text="Earth and Moon"
                    android:id="@+id/q4_third_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerFour"
                    android:text="Pluto and Sun"
                    android:id="@+id/q4_fourth_option"/>
            </RadioGroup>

            <TextView
                style="@style/TextViewStyle"
                android:text="5. On the surface of the moon, the:" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup5">

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerFive"
                    android:text="Mass and weight become lesser"
                    android:id="@+id/q5_first_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerFive"
                    android:text="Mass remains constant and only weight is lesser"
                    android:id="@+id/q5_second_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerFive"
                    android:text="Only mass is lesser"
                    android:id="@+id/q5_third_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerFive"
                    android:text="Mass and weight both remain unchanged"
                    android:id="@+id/q5_fourth_option"/>
            </RadioGroup>


            <TextView
                style="@style/TextViewStyle"
                android:text="6. Select all planetary bodies" />

            <CheckBox
                style="@style/CheckboxStyle"
                android:text="Earth"
                android:id="@+id/earth_checkbox"/>

            <CheckBox
                style="@style/CheckboxStyle"
                android:text="Pluto"
                android:id="@+id/pluto_checkbox"/>

            <CheckBox
                style="@style/CheckboxStyle"
                android:text="Mercury"
                android:id="@+id/mercury_checkbox"/>

            <CheckBox
                style="@style/CheckboxStyle"
                android:text="America"
                android:id="@+id/america_checkbox"/>

            <TextView
                style="@style/TextViewStyle"
                android:text="7. Other than Venezuela, which among the following from the South American countries is a member of OPEC?" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup7">

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerSeven"
                    android:text="Argentina"
                    android:id="@+id/q7_first_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerSeven"
                    android:text="Brazil"
                    android:id="@+id/q7_second_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerSeven"
                    android:text="Ecuador"
                    android:id="@+id/q7_third_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerSeven"
                    android:text="Bolivia"
                    android:id="@+id/q7_fourth_option"/>
            </RadioGroup>


            <TextView
                style="@style/TextViewStyle"
                android:text="8. NAMA-11 group of countries frequently appear in the news in the context of affairs of which one of the following?" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup8">

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerEight"
                    android:text="Nuclear Suppliers Group"
                    android:id="@+id/q8_first_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerEight"
                    android:text="World Bank"
                    android:id="@+id/q8_second_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerEight"
                    android:text="World Economic Forum"
                    android:id="@+id/q8_third_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerEight"
                    android:text="World Trade Organisation"
                    android:id="@+id/q8_fourth_option"/>
            </RadioGroup>

            <TextView
                style="@style/TextViewStyle"
                android:text="9. MERCOSUR consists of group of:" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup9">

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerNine"
                    android:text="Africa"
                    android:id="@+id/q9_first_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerNine"
                    android:text="Asia"
                    android:id="@+id/q9_second_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerNine"
                    android:text="Latin America"
                    android:id="@+id/q9_third_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerNine"
                    android:text="South East Asia"
                    android:id="@+id/q9_fourth_option"/>
            </RadioGroup>

            <TextView
                style="@style/TextViewStyle"
                android:text="10. The following has highest energy?" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup10">

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerTen"
                    android:text="Blue Light"
                    android:id="@+id/q10_first_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerTen"
                    android:text="Violet Light"
                    android:id="@+id/q10_second_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerTen"
                    android:text="Cyan Light"
                    android:id="@+id/q10_third_option"/>

                <RadioButton
                    style="@style/RadioButtonStyle"
                    android:onClick="answerTen"
                    android:text="Green Light"
                    android:id="@+id/q10_fourth_option"/>
            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submitButton"
                style="@style/ButtonStyle"
                android:onClick="submit"
                android:text="Submit" />

            <Button
                style="@style/ButtonStyle"
                android:text="Reset"
                android:onClick="reset"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>